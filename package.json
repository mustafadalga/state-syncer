{
  "name": "state-syncer",
  "description": "A simple state management library",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --declaration --emitDeclarationOnly",
    "preview": "vite preview"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "@types/react": "^18.2.73",
    "react": "^18.2.0"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "types": "./dist/state-syncer.d.ts",
  "main": "./dist/state-syncer.umd.cjs",
  "module": "./dist/state-syncer.js",
  "exports": {
